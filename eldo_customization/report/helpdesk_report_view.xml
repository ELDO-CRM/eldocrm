<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_report_pivot" model="ir.ui.view">
         <field name="name">helpdesk.report.tree</field>
         <field name="model">helpdesk.report</field>
         <field name="arch" type="xml">
            <pivot string="Helpdesk Report" disable_linking="True">
                <field name="stage_id" type="row"/>
                <field name="total_time_spent" type="measure" widget="float_time"/>
                <field name="avg_time_spent" type="measure" widget="float_time"/>
                <field name="tickets" type="measure"/>
            </pivot>
         </field>
    </record>

    <record id="action_helpdesk_report" model="ir.actions.act_window">
        <field name="name">Helpdesk Report</field>
        <field name="res_model">helpdesk.report</field>
        <field name="view_mode">pivot</field>
        <field name="view_id"></field>
    </record>

    <menuitem id="menu_helpdesk_repoort" action="action_helpdesk_report"
            parent="helpdesk.helpdesk_ticket_report_menu_main"/>

</odoo>
